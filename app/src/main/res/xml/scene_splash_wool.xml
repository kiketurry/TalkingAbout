<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/transitionWool"
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@id/stateEndWool"
        motion:constraintSetStart="@id/stateStartWool"
        motion:duration="@integer/duration_escene_splash"
        motion:motionInterpolator="cubic(.58,.57,.65,1.11)">

        <KeyFrameSet>
            <KeyAttribute
                android:rotation="-45"
                android:scaleX="1.07"
                android:scaleY="1.07"
                motion:framePosition="10"
                motion:motionTarget="@id/wool" />
            <KeyPosition
                motion:framePosition="10"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/wool"
                motion:percentY="-0.2" />
            <KeyAttribute
                android:rotation="0"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="20"
                motion:motionTarget="@id/wool" />
            <KeyPosition
                motion:framePosition="20"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/wool"
                motion:percentY="0" />
            <KeyAttribute
                android:rotation="-45"
                android:scaleX="1.07"
                android:scaleY="1.07"
                motion:framePosition="30"
                motion:motionTarget="@id/wool" />
            <KeyPosition
                motion:framePosition="30"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/wool"
                motion:percentY="-0.15" />
            <KeyAttribute
                android:rotation="0"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="40"
                motion:motionTarget="@id/wool" />
            <KeyPosition
                motion:framePosition="40"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/wool"
                motion:percentY="0" />
            <KeyAttribute
                android:rotation="-45"
                android:scaleX="1.07"
                android:scaleY="1.07"
                motion:framePosition="50"
                motion:motionTarget="@id/wool" />
            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/wool"
                motion:percentY="-0.08" />
            <KeyAttribute
                android:rotation="0"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="60"
                motion:motionTarget="@id/wool" />
            <KeyPosition
                motion:framePosition="60"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/wool"
                motion:percentY="0" />
            <KeyAttribute
                android:rotation="-45"
                android:scaleX="1.07"
                android:scaleY="1.07"
                motion:framePosition="70"
                motion:motionTarget="@id/wool" />
            <KeyPosition
                motion:framePosition="70"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/wool"
                motion:percentY="-0.05" />
            <KeyAttribute
                android:rotation="0"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="80"
                motion:motionTarget="@id/wool" />
            <KeyPosition
                motion:framePosition="80"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/wool"
                motion:percentY="0" />
            <KeyAttribute
                android:rotation="-45"
                android:scaleX="1.07"
                android:scaleY="1.07"
                motion:framePosition="90"
                motion:motionTarget="@id/wool" />
            <KeyPosition
                motion:framePosition="90"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/wool"
                motion:percentY="-0.03" />
        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/stateStartWool">
        <Constraint
            android:id="@id/wool"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="120dp"
            android:layout_marginBottom="50dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/stateEndWool">
        <Constraint
            android:id="@id/wool"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="50dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

</MotionScene>